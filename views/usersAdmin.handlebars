<h1>Administraci√≥n de Usuarios</h1>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>

        <form method="post" action="/users/delete-inactive">
            <button type="submit">Eliminar Usuarios Inactivos</button>
        </form>

    {{#each users}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
            <td>
                <form method="post" action="/users/{{this._id}}/role">
                    <select name="role">
                        <option value="user" {{#if this.isUserRole}}selected{{/if}}>User</option>
                        <option value="admin" {{#if this.isAdminRole}}selected{{/if}}>Admin</option>
                        <option value="premium" {{#if this.isAdminRole}}selected{{/if}}>Premium</option>
                    </select>
                    <button type="submit">Modificar Rol</button>
                </form>

                <form method="post" action="/users/{{this._id}}/delete">
                    <button type="submit">Eliminar Usuario</button>
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>